---
import { SEO } from "astro-seo";
interface Props {
  title: string;
}

const seoProps = {
  description:
    "Explore the personal website of Thomas Gormley, a software engineer specializing in intelligent communications and web development projects.",
  openGraph: {
    basic: {
      type: "website",
      url: "https://thomasgormley.dev",
      title: "Thomas Gormley - Software Engineer",
      image: "https://thomasgormley.dev/og.jpg",
    },
  },
  canonical: "https://thomasgormley.dev",
  robots: "index, follow",
  ...Astro.props,
};
---

<!doctype html>
<html lang="en">
  <head>
    <SEO {...seoProps} />
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-neutral-900 text-neutral-100 antialiased font-sans h-full w-full max-w-2xl mx-auto py-6 px-4"
  >
    <slot />
  </body>
</html>
